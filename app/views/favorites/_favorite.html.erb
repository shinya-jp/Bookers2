<% if book.favorited_by?(current_user) %>
    <i>
         <%= link_to book_favorites_path(book.id), method: :delete, remote: true do %>
            <span class="glyphicon glyphicon-heart text-danger " ></span><%= book.favorites.count %>
         <% end %>
         </i>
<% else %>
    <i><%= link_to book_favorites_path(book.id), method: :post, remote: true do %>
        <span class="glyphicon glyphicon-heart-empty "></span><%= book.favorites.count %>
  <% end %>
  </i>
<% end %>