<div class="container">
	<% if @book.errors.any? %>
 		<div class = "alert-errors alert-warning">
 			<h4><%= @book.errors.count %>errors prohibited this obj from being saved:</h4>
 			<ul>
 				<% @book.errors.full_messages.each do |message| %>
 				<li><%= message %></li>
 			<% end %>
 			</ul>
 		</div>
 	<% end %>
	<div class="row">
		<div class="editpage col-xs-offset-3 col-xs-6">
			<h1>Editing Book</h1>
			<%= form_for @book do |f| %>
			<div class="formgrop">
				<div class="field">
				 <%= f.label :Title %><br>
				 <%= f.text_field :title, class: "form-control" %>
			    </div>
			    <div class="field">
			     <%= f.label :Opinion %><br>
			     <%= f.text_area :body, class: "form-control"  %>
			    </div>
			    <div class="action">
			     <%= f.submit(class:'btn btn-primary btn-block') %>
			    </div>
			</div>
			<% end %>
			<td><%= link_to "Show", book_path(@book) %></td>
			<td> | </td>
			<td><%= link_to "Back", books_path %></td>
		</div>
	</div>
</div>
