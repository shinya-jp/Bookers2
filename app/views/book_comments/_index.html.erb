<table>
<tbody>
<% book_comments.each do |book_comment| %>
    <tr>
        <td> <%= attachment_image_tag book_comment.user,:profile_image, :fill, 50, 50,format:'jpeg', fallback:"no_image.jpg",size:'50x50', class: 'img' %>
         	<%= book_comment.user.name %>
        </td>
        <td><%= book_comment.comment %></td>
            <% if book_comment.user.id == current_user.id%>
        <td><%= link_to "Destroy",book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn btn-danger " %>
        </td>
            <% end %>
    </tr><br>
<% end %>
</tbody>
</table>