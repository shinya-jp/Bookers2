<tbody>
<% book_comments.each do |book_comment| %>
    <tr>
        <td> <%= attachment_image_tag book_comment.user,:profile_image, :fill, 50, 50,format:'jpeg', fallback:"no_image.jpg",size:'50x50' %><br>
         	<%= book_comment.user.name %>
        </td>
        <td><%= book_comment.comment %></td>
            <% if book_comment.user.id == current_user.id%>
        <td><%= link_to "Destroy",book_book_comment_path(@book, book_comment), method: :delete, remote: true, class: "btn btn-danger ","data-confirm"=> "本当に消しますか?" %>
        </td>
            <% end %>
    </tr>
<% end %>
</tbody>